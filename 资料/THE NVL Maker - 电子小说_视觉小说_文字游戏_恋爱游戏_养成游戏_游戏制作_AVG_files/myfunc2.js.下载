$(document).ready(function () {

$("#tab_btn1").click(
function () {
	//隐藏所有TAB
	for (var i=1;i<=6;i++)
	{
		$("div#tabs-"+i).addClass("hide");
		$("#tab_btn"+i).css("background-color","#f1f2ea");
	}
	//只保留tab1
	$("div#tabs-1").removeClass("hide");	
	$(this).css("background-color","#09F");

	}
)

